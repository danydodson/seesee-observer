{
  "name": "seesee-api",
  "version": "0.1.0",
  "private": true,
  "main": "src/app.js",
  "scripts": {
    "start": "nodemon --exec babel-node src/app.js",
    "heroku-postbuild": "npm install --only=dev && npm install",
    "heroku-postinstall": "npm install --only=dev && npm install",
    "pm2": "pm2 start src/app.js --name seesee --watch",
    "inspect": "nodemon --inspect --exec babel-node src/app.js",
    "test": "cross-env NODE_ENV=test jest --testTimeout=10000",
    "lint:eslint": "eslint --ignore-path .gitignore",
    "lint:js": "npm run lint:eslint src/",
    "lint": "npm run lint:js",
    "lint:fix": "npm run lint:js -- --fix"
  },
  "dependencies": {
    "agenda": "^2.3.0",
    "await-to-js": "^2.1.1",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "express-jwt": "^5.3.1",
    "express-validator": "^6.3.1",
    "helmet": "^3.21.2",
    "jsonwebtoken": "^8.5.1",
    "mailgun-js": "^0.22.0",
    "method-override": "^3.0.0",
    "mongoose": "^5.8.3",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "slugify": "^1.3.6",
    "typedi": "^0.8.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/node": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "cross-env": "^6.0.3",
    "eslint": "^6.8.0",
    "jest": "^24.9.0",
    "nodemon": "^2.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}