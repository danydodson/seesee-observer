{
  "name": "seesee",
  "version": "0.1.0",
  "description": "Social network for artists",
  "author": "Dany Dodson",
  "keywords": [
    "cron",
    "jobs",
    "js",
    "javascript",
    "node",
    "express"
  ],
  "private": true,
  "scripts": {
    "start:api": "npm start --prefix api",
    "start:client": "npm start --prefix client",
    "start:build": "npm run build --prefix client",
    "start:update": "npm-check --update",
    "start": "concurrently \"npm run start:api\" \"npm run start:client\"",
    "deploy:api": "git subtree push --prefix api heroku master",
    "format": "prettier --trailing-comma es5 --single-quote --write '**/*.{js,md,json}'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DanyDodson/seesee.git"
  },
  "homepage": "https://github.com/DanyDodson/seesee#readme",
  "engines": {
    "node": ">=12.x.x",
    "npm": ">=6.x.x"
  },
  "devDependencies": {
    "concurrently": "^5.0.2",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,css,html}": [
      "prettier --trailing-comma es5 --single-quote --write",
      "git add"
    ]
  }
}